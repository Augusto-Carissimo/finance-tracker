<h1>My Friends</h1>
<%= button_to 'Profile', user_path(current_user), method: :get, class: "btn btn-xs btn-success" %>

<div class='search-area'>
  <h3>Search for Friends</h3>
  <%= form_tag search_friendships_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :user, params[:user], placeholder: "User email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= 'Search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<br>

<div class='results_turbo_stream'>
  <%= render 'friendships/results' %>
</div>

<div class='list_turbo_stream'>
  <% if !@friendships.empty? %>
    <%= render 'users/list' %>
  <% end %>
</div>
